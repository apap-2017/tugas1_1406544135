package com.example.demo.model;

import javax.validation.constraints.NotNull;
import javax.validation.constraints.Size;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@AllArgsConstructor
@NoArgsConstructor

public class PendudukModel {

	private Integer idPenduduk;
	private String nik;
	
	@NotNull(message = "Wajib Diisi")
	private Integer jenis_kelamin, is_wni,is_wafat;
	
	@NotNull(message = "Wajib Diisi")
	private Integer id_keluarga;
	
	@NotNull(message = "Wajib Diisi")
	@Size(min=2, message = "Wajib Diisi")
	private String nama, tempat_lahir, agama, pekerjaan;
	
	@NotNull(message = "Wajib Diisi")
	@Pattern(regexp = "\\d{2}(-|\\/)\\d{2}(-|\\/)\\d{4}", message = "Format dd-MM-yyyy")
	private String tanggal_lahir;
	
	@NotNull(message = "Wajib Diisi")
	private String status_dalam_keluarga;

	@NotNull(message = "Wajib Diisi")
	private String status_perkawinan, golongan_darah;

	private KeluargaModel keluarga;

}

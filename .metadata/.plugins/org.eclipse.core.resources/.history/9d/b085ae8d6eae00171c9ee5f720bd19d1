		function selectBuilding(idFakultas){
			var result = '';
			for(var i in buildingList){
				var id = buildingList[i].id;
				var name = buildingList[i].name;
				if(buildingList[i].id_faculty == idFakultas){
					result += '<option value="' + id + '">' + name + '</option>';
				}
			}
			document.getElementById("idSelectBuilding").innerHTML = result;
		}
